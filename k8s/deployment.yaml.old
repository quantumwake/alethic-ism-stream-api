apiVersion: apps/v1
kind: Deployment
metadata:
  name: alethic-ism-api-deployment
  namespace: alethic
spec:
  replicas: 1 
  selector:
    matchLabels:
      app: alethic-ism-api
  template:
    metadata:
      labels:
        app: alethic-ism-api
    spec:
      volumes:
        - name: alethic-ism-api-secret-config-volume
          secret:
            secretName: alethic-ism-api-secret
            items:
              - key: .routing.yaml
                path: .routing.yaml
              - key: .firebase-credentials.json
                path: .firebase-credentials.json
      containers:
      - name: alethic-ism-api
        image: <IMAGE>
        imagePullPolicy: Always
        volumeMounts:
          - name: alethic-ism-api-secret-config-volume
            mountPath: /app/repo/.routing.yaml
            subPath: .routing.yaml
            readOnly: true
          - name: alethic-ism-api-secret-config-volume
            mountPath: /app/repo/.firebase-credentials.json
            subPath: .firebase-credentials.json
            readOnly: true
        env:
          - name: DATABASE_URL
            valueFrom:
              secretKeyRef:
                name: alethic-ism-api-secret
                key: DATABASE_URL
        ports:
        - containerPort: 80
      imagePullSecrets:
      - name: regcred
